# ============================================================================
# Enhanced YouTube Transcript Processing - Environment Configuration
# ============================================================================
# Copy this file to .env and customize the values for your environment
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Basic Application Settings
APP_NAME=Enhanced YouTube Transcript Processing
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============================================================================
# API KEYS AND CREDENTIALS
# ============================================================================
# Note: These can also be stored securely using the credential manager

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_GPT4_MODEL=gpt-4o
OPENAI_GPT35_MODEL=gpt-3.5-turbo

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_CLAUDE_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_HAIKU_MODEL=claude-3-haiku-20240307

# ============================================================================
# LLM CONFIGURATION
# ============================================================================

# Default LLM Provider (openai, anthropic, ollama)
DEFAULT_LLM_PROVIDER=ollama

# Model Selection Strategy (auto, prefer_local, prefer_cloud, cloud_only)
MODEL_SELECTION_STRATEGY=auto

# Model Parameters
MAX_TOKENS=4000
TEMPERATURE=0.7
LLM_TIMEOUT=60
LLM_SUMMARIZATION_TIMEOUT=120
LLM_KEYWORD_TIMEOUT=45
LLM_TIMESTAMP_TIMEOUT=90

# ============================================================================
# OLLAMA CONFIGURATION
# ============================================================================

# Ollama Server Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_KEEP_ALIVE=5m
OLLAMA_CONNECTION_TIMEOUT=10

# Ollama Fallback Configuration
OLLAMA_FALLBACK_ENABLED=true
OLLAMA_FALLBACK_PROVIDER=openai

# Ollama Performance Settings
OLLAMA_AUTO_PULL=true
OLLAMA_MODEL_CACHE_SIZE=5
OLLAMA_GPU_MEMORY_FRACTION=0.8
OLLAMA_CPU_THREADS=0
OLLAMA_CONTEXT_SIZE=4096

# ============================================================================
# MODEL SELECTION CONFIGURATION
# ============================================================================

# Language-Specific Models
CHINESE_LANGUAGE_MODEL=qwen2.5:7b
PERFORMANCE_MODEL=mistral:7b
LIGHTWEIGHT_MODEL=llama3.2:3b

# Model Selection Criteria
PREFERRED_MODEL_SIZE=medium
MAX_MODEL_MEMORY_GB=8
PREFER_QUANTIZED_MODELS=true
LANGUAGE_SPECIFIC_ROUTING=true

# Advanced Model Configuration
FALLBACK_MODEL_CHAIN=llama3.1:8b,mistral:7b,llama3.2:3b
MODEL_LOAD_BALANCING=false
MODEL_HEALTH_CHECK_ENABLED=true
MODEL_HEALTH_CHECK_INTERVAL=300
MODEL_RESPONSE_TIME_THRESHOLD=30.0
MODEL_AVAILABILITY_THRESHOLD=0.95

# Model Priority by Task (examples)
# MODEL_PRIORITY_SUMMARIZATION=llama3.1:8b
# MODEL_PRIORITY_KEYWORDS=mistral:7b
# MODEL_PRIORITY_TIMESTAMPS=llama3.2:3b

# YouTube API Configuration
YOUTUBE_API_TIMEOUT=30
YOUTUBE_METADATA_TIMEOUT=15
TRANSCRIPT_FETCH_TIMEOUT=45
MAX_VIDEO_DURATION=1800  # 30 minutes in seconds
RETRY_ATTEMPTS=3
RETRY_DELAY=1

# ============================================================================
# PROXY CONFIGURATION
# ============================================================================

# Enable/Disable Proxy
PROXY_ENABLED=false

# Proxy URLs (comma-separated)
PROXY_URLS=
# Example: PROXY_URLS=http://proxy1:8080,http://proxy2:8080,socks5://proxy3:1080

# Proxy Authentication (can also use credential manager)
PROXY_USERNAME=
PROXY_PASSWORD=

# Proxy Settings
PROXY_TIMEOUT=30
PROXY_HEALTH_CHECK_INTERVAL=300
PROXY_HEALTH_CHECK_TIMEOUT=10
PROXY_MAX_FAILURES=3
PROXY_ROTATION_ENABLED=true
PROXY_POOL_SIZE=10

# Advanced Proxy Configuration
PROXY_AUTH_TYPE=basic
PROXY_SOCKS_VERSION=5
PROXY_SSL_VERIFY=true
PROXY_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
PROXY_CONNECTION_RETRY_ATTEMPTS=3
PROXY_CONNECTION_RETRY_DELAY=1.0
PROXY_DNS_RESOLUTION=remote
PROXY_KEEP_ALIVE=true
PROXY_MAX_CONNECTIONS=100
PROXY_MAX_CONNECTIONS_PER_HOST=10

# Proxy Security
PROXY_WHITELIST_DOMAINS=youtube.com,googleapis.com
PROXY_BLACKLIST_DOMAINS=
PROXY_ENABLE_LOGGING=false
PROXY_LOG_LEVEL=warning

# Custom Proxy Headers (example)
# PROXY_HEADER_X_FORWARDED_FOR=your-ip
# PROXY_HEADER_USER_AGENT=custom-user-agent

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MIN_INTERVAL=10
RATE_LIMIT_MAX_REQUESTS_PER_MINUTE=6
RATE_LIMIT_BURST_REQUESTS=3

# Retry Configuration
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=5
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_BACKOFF_MULTIPLIER=2.0
RETRY_JITTER_ENABLED=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600  # 1 hour in seconds

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Application Security
SECRET_KEY=your_secret_key_here_change_in_production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_RATE_LIMIT=100

# Encryption and SSL
ENCRYPTION_KEY=your_encryption_key_for_credential_storage
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# JWT Configuration
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Security Headers
API_KEY_HEADER=X-API-Key
MAX_REQUEST_SIZE=10MB
ENABLE_HTTPS_REDIRECT=false
ENABLE_SECURITY_HEADERS=true

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Performance Configuration
REQUEST_TIMEOUT=300  # 5 minutes
MAX_CONTENT_LENGTH=50MB
ENABLE_CACHING=true

# Development Configuration
HOT_RELOAD=true
AUTO_RELOAD=true
PYTEST_TIMEOUT=30

# ============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# ============================================================================

# Development Environment Overrides
# Uncomment these for development
# DEBUG=true
# LOG_LEVEL=debug
# OLLAMA_AUTO_PULL=true
# ENABLE_CACHING=false

# Production Environment Overrides
# Uncomment these for production
# DEBUG=false
# LOG_LEVEL=warning
# HOT_RELOAD=false
# AUTO_RELOAD=false
# ENABLE_SECURITY_HEADERS=true
# ENABLE_HTTPS_REDIRECT=true

# Staging Environment Overrides
# Uncomment these for staging
# DEBUG=false
# LOG_LEVEL=info
# ENABLE_CACHING=true

# ============================================================================
# MONITORING AND METRICS
# ============================================================================

# Health Check Configuration
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60

# Metrics Collection
ENABLE_METRICS=false
METRICS_PORT=9090
METRICS_PATH=/metrics

# ============================================================================
# CUSTOM CONFIGURATION
# ============================================================================

# Add your custom environment variables here
# CUSTOM_FEATURE_ENABLED=true
# CUSTOM_API_ENDPOINT=https://api.example.com
# CUSTOM_TIMEOUT=30