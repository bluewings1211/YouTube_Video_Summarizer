# Application Configuration
APP_NAME=Enhanced YouTube Transcript Processing
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# API Keys - Replace with your actual API keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229
MAX_TOKENS=4000
TEMPERATURE=0.7

# YouTube API Configuration
YOUTUBE_API_TIMEOUT=30
YOUTUBE_METADATA_TIMEOUT=15
TRANSCRIPT_FETCH_TIMEOUT=45
MAX_VIDEO_DURATION=1800  # 30 minutes in seconds
RETRY_ATTEMPTS=3
RETRY_DELAY=1

# Proxy Configuration
PROXY_ENABLED=false
PROXY_URLS=
# Example: PROXY_URLS=http://proxy1.example.com:8080,http://proxy2.example.com:8080,socks5://proxy3.example.com:1080
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_TIMEOUT=30
PROXY_HEALTH_CHECK_INTERVAL=300
PROXY_HEALTH_CHECK_TIMEOUT=10
PROXY_MAX_FAILURES=3
PROXY_ROTATION_ENABLED=true
PROXY_POOL_SIZE=10

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MIN_INTERVAL=10
RATE_LIMIT_MAX_REQUESTS_PER_MINUTE=6
RATE_LIMIT_BURST_REQUESTS=3

# Retry Configuration
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=5
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_BACKOFF_MULTIPLIER=2.0
RETRY_JITTER_ENABLED=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600  # 1 hour in seconds

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_RATE_LIMIT=100  # requests per minute

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Performance Configuration
REQUEST_TIMEOUT=300  # 5 minutes
MAX_CONTENT_LENGTH=50MB
ENABLE_CACHING=true

# Development Configuration
HOT_RELOAD=true
AUTO_RELOAD=true
PYTEST_TIMEOUT=30